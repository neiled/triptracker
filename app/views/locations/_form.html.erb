<%= semantic_form_for [@trip, @location] do |form| %>
  <%= form.inputs do %>
    <%= form.input :name, :label => "Location name" %>
    <%= form.input :arrival_date, :label => "When do you arrive?", :as => :string %>
    <%= form.input :transports, :label => "How will you get there?", :as => :check_boxes %>
  <% end %>
  <%= form.commit_button "Add"%>
<% end %>
